		<script>
			// Função para formatar 1 em 01
			const zeroFill = n => {
				return ('0' + n).slice(-2);
			}

			// Cria intervalo
			const interval = setInterval(() => {
				// Pega o horário atual
				var agora = new Date();
        
				// Formata a data conforme dd/mm/aaaa hh:ii:ss
				var relogio = zeroFill(agora.getUTCDate()) + '/' + zeroFill((agora.getMonth() + 1)) + '/' + agora.getFullYear() + ' ' + zeroFill(agora.getHours()) + ':' + zeroFill(agora.getMinutes())

				// Exibe na tela usando a div#data-hora
				document.getElementById('data-hora').innerHTML = relogio;        
			}, 1000);
		</script>
