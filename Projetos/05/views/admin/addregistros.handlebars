{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h2>Cadastro de Registros</h2>

<div class=card style="width: 70rem;">
    <div class=card-body>
      <form action="/admin/registros/novo" method="POST">           
        <div class="col-md-9">
          <label for="titulo">Titulo:</label>
          <input type="text" class="form-control" id="titulo" name="titulo" required>
        </div>
        <br>  

      <div class="form-group">
        <div class="col-md-2">
          <label for="prioridade">Prioridade</label>
          <select class="form-control" id="prioridade" name="prioridade" required>
          <option></option>
          <option>Normal</option>
          <option>Baixa</option>
          <option>Alta</option>
          <option>Critico</option>
          </select>          
        </div>
      
        <div class="col-md-2">
          <label for="tipo">Tipo</label>
          <select class="form-control" id="tipo" name="tipo" required>
          <option></option>
          <option>Pendência</option>
          <option>Abend</option>
          <option>Zabbix</option>
          <option>Backup</option>
          <option>Restore</option>
          </select>          
        </div>
            
        <div class="col-md-2">
          <label for="chamado">N° do Chamado</label>
          <input type="text" class="form-control " id="chamado" name="chamado">          
        </div>
      </div> 

      <div class="col-md-9">
          <label for="registro">Registro:</label>          
          <textarea class="form-control" rows="5" id="registro" name="registro" required></textarea> 
      </div>
         <br>  
        <button class="btn btn-primary" type="submit">Salvar</button >
      </form>
  </div>
</div>